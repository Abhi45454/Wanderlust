  <!-- Include Flatpickr CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

<script>
  const pricePerNight = <%= listing.price %>;
  const bookedOutDates = <%- JSON.stringify(listing.bookedDates || []) %>; // must be in YYYY-MM-DD format

  const fp = flatpickr("#dateRange", {
    mode: "range",
    minDate: "today",
    disable: bookedOutDates,
    dateFormat: "Y-m-d",
    onClose: function(selectedDates) {
      if (selectedDates.length === 2) {
        const [checkInDate, checkOutDate] = selectedDates;
        document.getElementById("checkIn").value = checkInDate.toISOString().split('T')[0];
        document.getElementById("checkOut").value = checkOutDate.toISOString().split('T')[0];

        const diffTime = Math.abs(checkOutDate - checkInDate);
        const nights = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
        document.getElementById("totalPrice").value = `â‚¹ ${nights * pricePerNight}`;
      }
    }
  });
</script>












 