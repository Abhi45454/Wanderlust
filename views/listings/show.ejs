   <% if (geoData && geoData.lon && geoData.lat) { %>
   <script type="text/javascript">
            var key = 'pk.8e5446aa533b61a564c574c95159cb25';   //Insert your LocationIQ access token here

            var styleJson = 'https://tiles.locationiq.com/v3/streets/vector.json?key=' + key;

            const map = new ol.Map({
                target: 'map',
                view: new ol.View({
                    center: ol.proj.fromLonLat([<%= geoData.lon %>, <%= geoData.lat %>]),


                    zoom: 12
                })
            });

    olms.apply(map, styleJson).then(() => {
       

const marker = new ol.Feature({
    geometry: new ol.geom.Point(ol.proj.fromLonLat([<%= geoData.lon %>, <%= geoData.lat %>]))
});

// Marker style (pin icon)
marker.setStyle(new ol.style.Style({
    image: new ol.style.Icon({
        anchor: [0.5, 1],
        src: 'https://cdn-icons-png.flaticon.com/512/684/684908.png',
        scale: 0.05
    })
}));


const circle = new ol.Feature(
    new ol.geom.Circle(ol.proj.fromLonLat([<%= geoData.lon %>, <%= geoData.lat %>]), 200) // radius in meters
);

circle.setStyle(new ol.style.Style({
    fill: new ol.style.Fill({
        color: 'rgba(30, 144, 255, 0.2)'   // faded blue
    }),
    stroke: new ol.style.Stroke({
        color: 'rgba(30, 144, 255, 0.6)',
        width: 1
    })
}));


const vectorSource = new ol.source.Vector({
    features: [circle, marker]
});

const markerLayer = new ol.layer.Vector({
    source: vectorSource
});

// Add layer to map
map.addLayer(markerLayer);


        const overlay = new ol.Overlay({
            element: document.createElement('div'),
            positioning: 'bottom-center',
            stopEvent: false,
            offset: [0, -20]
        });

        overlay.getElement().innerHTML = `
  <div style="
    background: white; 
    padding: 6px 10px; 
    border-radius: 8px; 
    border: 1px solid rgba(0,0,0,0.2); 
    box-shadow: 0 2px 6px rgba(0,0,0,0.3); 
    font-size: 14px;
    font-weight: 500;
    color: #333;
    max-width: 150px;
    text-align: center;
  "><%= listing.title %>
  </div>
`;

        map.addOverlay(overlay);
        overlay.setPosition(ol.proj.fromLonLat([<%= geoData.lon %>, <%= geoData.lat %>]));

    });



    
</script>
<% } else { %>
<p style="text-align: center;">Location data not available for this listing.</p>
