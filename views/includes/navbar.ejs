<div id="sidebarOverlay"></div>
<div id="mobileSidebar">
  <div class="sidebar-content">
    <button id="closeSidebar" class="btn-close btn-close-black" aria-label="Close"></button>
    <a class="nav-link mt-4" href="/listings">Explore</a>
    <a class="nav-link" href="/listings/new">Airbnb Your Home</a>
    <% if (currUser) { %>
      <a class="nav-link" href="/my-bookings">My Bookings</a>
      <a class="nav-link text-danger" href="/logout">Log Out</a>
    <% } else { %>
      <a class="nav-link" href="/login">Log In</a>
      <a class="nav-link" href="/signup">Sign Up</a>
    <% } %>
  </div>
</div>

<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem;
  }

  .search-input {
    border-radius: 25px;
    padding: 0.5rem 1.5rem;
    font-size: 1rem;
    max-width: 300px;
  }

  .sizeCHange:hover{
    background-color: #fe424d;
    opacity: 0.8;
    color: #fff;
  }
  .sizeCHange{
    display: flex;
    justify-content: center;
    align-items: center;
    justify-content: space-between;
    width: 150px;
  }



  #mobileSidebar {
    position: fixed;
    top: 0;
    right: -100%;
    width: 250px;
    height: 100%;
    background-color: rgba(255, 255, 255, 0.7);
    color: #111;
    transition: right 0.3s ease-in-out;
    z-index: 1051;
    padding: 1rem;
    box-shadow: -2px 0 10px rgba(0, 0, 0, 0.2);
}

  #mobileSidebar.show {
    right: 0;
  }

  #sidebarOverlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;
    width: 100vw;
    background: rgba(0, 0, 0, 0.4);
    z-index: 1050;
  }

  #sidebarOverlay.show {
    display: block;
  }

  .sidebar-content .nav-link {
    color: white;
    font-weight: 500;
    font-size: 1.1rem;
    margin: 0.5rem 0;
  }

  .sidebar-content .nav-link:hover {
    color: #ffdada;
  }

  .btn-close-white {
    filter: invert(1);
  }

  @media (max-width: 768px) {
    .search-input {
      max-width:80%;
    }
    .formsize{
      display: flex;
      justify-content: center;
      align-items: center;
      
      max-width:80%;
      
    }

  
    .bhaiji{
      max-width:80%;

    }

    .btnsize{
      height: 35px;
      width: 85px;
      margin-left: 2px;
    }
}

  

</style>

<script>
  const sidebarToggle = document.getElementById("sidebarToggle");
  const sidebar = document.getElementById("mobileSidebar");
  const closeSidebar = document.getElementById("closeSidebar");
  const overlay = document.getElementById("sidebarOverlay");


  sidebarToggle.addEventListener("click", () => {
    sidebar.classList.add("show");
    overlay.classList.add("show");
  });


  function hideSidebar() {
    sidebar.classList.remove("show");
    overlay.classList.remove("show");
  }

  closeSidebar.addEventListener("click", hideSidebar);
  overlay.addEventListener("click", hideSidebar);

  window.addEventListener("scroll", () => {
    if (window.innerWidth < 768 && sidebar.classList.contains("show")) {
      hideSidebar();
    }
  });

 
  document.querySelectorAll("#mobileSidebar .nav-link").forEach(link => {
    link.addEventListener("click", hideSidebar);
  });
</script>

